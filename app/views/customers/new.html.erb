<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>
<div id="sign-up-form">
	<% form_for(@customer) do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	<% end %>
</div>