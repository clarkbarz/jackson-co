<% provide(:title, @product.name) %>

<%= link_to "Back", products_path, class: "btn btn-medium btn-back" %>

<h1 class="center"><%= @product.name %></h1>

<div class="row">
	<div class="span5 center">
		<h4>Image</h4>
		<div id="image">
			<%= image_tag("products/#{@product.category}/#{product.colors.first.id}_jacket_b.jpg", class: "img-polaroid product-image") %>
		</div>
		<a href="#" rel="products/jacket"></a>
		<h4>Color</h4>
		<ul class="product-colors">
			<% @product.colors.each do |color| %>
				<li>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="span5 offset2">
		<h3 class="center">Overview</h3>
		<p class="product-description"><%= @product.description %></p>
		<h4 class="center">Details</h4>
		<% if @product.details.first %>
			<ul class="product-details">
				<% @product.details.each do |deet| %>
					<li><%= deet.content %></li>
				<% end %>
			</ul>
		<% end %>
	</div>
</div>